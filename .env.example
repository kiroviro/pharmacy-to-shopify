# Shopify Configuration
# Get these from your Shopify Admin: Apps > Develop apps > Create app
SHOPIFY_SHOP_URL=your-shop-name.myshopify.com
SHOPIFY_ACCESS_TOKEN=shpat_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SHOPIFY_API_KEY=your_api_key_here

# Google Ads Configuration (Optional)
# Get these from https://ads.google.com/aw/apicenter
# Follow the setup guide: docs/google-ads.md
GOOGLE_ADS_DEVELOPER_TOKEN=your_developer_token_here
GOOGLE_ADS_CLIENT_ID=your_client_id.apps.googleusercontent.com
GOOGLE_ADS_CLIENT_SECRET=your_client_secret_here
GOOGLE_ADS_REFRESH_TOKEN=your_refresh_token_here
GOOGLE_ADS_CUSTOMER_ID=1234567890

# Application Settings
# Domain of the source pharmacy site you're scraping
SOURCE_DOMAIN=pharmacy.example.com

# Extraction Settings
MAX_WORKERS=5
REQUEST_DELAY=1.0
CONTINUE_ON_ERROR=true

# Output Settings
OUTPUT_DIR=output
DATA_DIR=data

# Logging
LOG_LEVEL=INFO
